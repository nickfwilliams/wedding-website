---
const { title = "Nick & Montana's Wedding" } = Astro.props;
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <!-- Stylesheets -->
    <link rel="stylesheet" href="/src/styles/global.scss" />
    <link rel="stylesheet" href="/src/styles/reset.css" />
    <!-- Google Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Caprasimo&family=Caveat:wght@400..700&display=swap" rel="stylesheet">
  </head>
  <body>
    <Header />    
    <main>
      <img class="hills" src="/src/assets/images/hills.png">
      <img class="bush" src="/src/assets/images/bush.png">
      <slot />
    </main>
    <Footer />
    <script src="/src/scripts/reveal.js" is:inline></script>

  </body>
</html>